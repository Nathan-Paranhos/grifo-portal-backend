{
  "name": "grifo-api-backend",
  "version": "1.0.0",
  "description": "API REST para o sistema Grifo - Gestão de Vistorias Imobiliárias",
  "main": "src/server.cjs",
  "scripts": {
    "start": "node src/server.cjs",
    "dev": "nodemon src/server.cjs --ignore logs/",
    "build": "echo 'No build step required for Node.js'",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "check": "npm run lint && npm run format:check",
    "docker:build": "docker build -t grifo-api .",
    "docker:run": "docker run -p 3000:3000 --env-file .env grifo-api",
    "logs": "tail -f logs/app.log",
    "logs:error": "tail -f logs/error.log",
    "health": "curl https://grifo-api.onrender.com/api/health",
    "backup:full": "curl -X POST https://grifo-api.onrender.com/api/admin/backup/create",
    "backup:incremental": "curl -X POST https://grifo-api.onrender.com/api/admin/backup/create -H 'Content-Type: application/json' -d '{\"type\":\"incremental\"}'",
    "metrics": "curl https://grifo-api.onrender.com/api/admin/metrics"
  },
  "keywords": [
    "api",
    "rest",
    "grifo",
    "vistorias",
    "imobiliarias",
    "node",
    "express",
    "supabase"
  ],
  "author": "Nathan Paranhos",
  "license": "MIT",
  "dependencies": {
    "@sentry/node": "^7.120.4",
    "@sentry/profiling-node": "^7.120.4",
    "@supabase/supabase-js": "^2.55.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "sharp": "^0.33.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nathan-Paranhos/grifo-api-backend.git"
  },
  "bugs": {
    "url": "https://github.com/Nathan-Paranhos/grifo-api-backend/issues"
  },
  "homepage": "https://github.com/Nathan-Paranhos/grifo-api-backend#readme"
}
