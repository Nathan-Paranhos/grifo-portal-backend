DATA_SOURCE=supabase_production

# ===================================
# CONFIGURAÇÕES DE CORS
# ===================================
# URLs permitidas para CORS (separadas por vírgula)
CORS_ORIGIN=https://portal-api-grifo.vercel.app,https://portal-api-grifo.vercel.app/dashboard,http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With,Accept,Origin

# ===================================
# CONFIGURAÇÕES DE RATE LIMITING
# ===================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MESSAGE=Muitas tentativas. Tente novamente em 15 minutos.

# ===================================
# CONFIGURAÇÕES DE LOGGING - PRODUÇÃO
# ===================================
# Logs configurados para ambiente de produção com dados reais
LOG_LEVEL=info
LOG_FORMAT=combined
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true
LOG_REAL_DATA_OPERATIONS=true
LOG_SUPABASE_OPERATIONS=true
PRODUCTION_LOGGING=true

# ===================================
# CONFIGURAÇÕES DE UPLOAD
# ===================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf,text/plain
UPLOAD_PATH=uploads

# ===================================
# CONFIGURAÇÕES DE CACHE
# ===================================
CACHE_TTL=3600
ENABLE_CACHE=true

# ===================================
# CONFIGURAÇÕES DE MONITORAMENTO - PRODUÇÃO
# ===================================
# Monitoramento configurado para dados reais em produção
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_PATH=/health
ENABLE_METRICS=true
MONITOR_REAL_DATA=true
MONITOR_SUPABASE_CONNECTIONS=true
PRODUCTION_MONITORING=true
ALERT_ON_DATA_ISSUES=true

# ===================================
# CONFIGURAÇÕES DE PRODUÇÃO - DADOS REAIS
# ===================================
# Sistema configurado para trabalhar EXCLUSIVAMENTE com dados reais
ENABLE_SWAGGER=true
SWAGGER_PATH=/api-docs
ENABLE_DEBUG=false
DISABLE_MOCK_DATA=true
DISABLE_TEST_DATA=true
FORCE_REAL_DATA_ONLY=true
VALIDATE_PRODUCTION_DATA=true

# ===================================
# INSTRUÇÕES DE USO
# ===================================
# 1. Copie TODAS estas variáveis para o Render Dashboard
# 2. Vá em Settings > Environment Variables
# 3. Cole cada variável (nome=valor)
# 4. Salve e faça o redeploy
# 5. Teste a API em: https://grifo-api.onrender.com/health
#
# IMPORTANTE - PRODUÇÃO COM DADOS REAIS:
# - Este arquivo está configurado para DADOS REAIS de PRODUÇÃO
# - Nunca commite este arquivo com chaves reais
# - As chaves do Supabase são específicas do projeto de PRODUÇÃO
# - O JWT_SECRET deve ser único e seguro
# - Configure o CORS para incluir o domínio do portal
# - Sistema configurado para trabalhar EXCLUSIVAMENTE com dados reais
# - Dados de teste e mock estão DESABILITADOS

# ===================================
# VARIÁVEIS ESPECÍFICAS DO RENDER
# ===================================
# Estas são configuradas automaticamente pelo Render
# RENDER=true
# RENDER_SERVICE_ID=srv-xxxxx
# RENDER_SERVICE_NAME=grifo-api-backend
# RENDER_GIT_COMMIT=xxxxx
# RENDER_GIT_BRANCH=main